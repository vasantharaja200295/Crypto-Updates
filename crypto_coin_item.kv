<crypto_coin_item>:
    md_bg_color:utils.get_color_from_hex(app.secondary_background)
    size_hint:(1,.15)
    radius:[10,10,10,10]
    MDFloatLayout:
        MDLabel:
            text:root.id
            halign:'center'
            font_name:"Poppins-Medium.ttf"
            pos_hint:{"center_x":.05,"center_y":.5}
        AsyncImage:
            source:root.icon
            size_hint:.4,.4
            pos_hint:{"center_x":.15,"center_y":.5}
        MDFloatLayout:
            size_hint:(.8,1)
            pos_hint:{"center_x":.6,"center_y":.5}
            MDLabel:
                text:root.coin_name
                halign:'left'
                font_name:"Poppins-Medium.ttf"
                pos_hint:{"center_x":.53,"center_y":.5}
            MDLabel:
                text:root.price
                halign:'left'
                font_name:"Poppins-Medium.ttf"
                pos_hint:{"center_x":1,"center_y":.5}
            MDLabel:
                text:root.change
                halign:'center'
                pos_hint:{"center_x":.9,"center_y":.5}
                font_name:"Poppins-Medium.ttf"
                theme_text_color:"Custom"
                text_color:root.color
